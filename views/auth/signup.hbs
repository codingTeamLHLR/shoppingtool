<section class="authSection">

   <form class="authForm" action="/auth/signup" method="POST">
   <h1>Sign Up</h1>
      <p>Please put in your email and password to create an account.</p>
      <label> 
         <input type="email" name="email" placeholder="email">
      </label>
      <label>
         <input type="password" name="passwordHash" placeholder="********">
      </label>

      {{#if errorMessage}}
         <p class="errorMessage">{{errorMessage}}</p>
      {{/if}}

      <button class="authSendButton" type="submit">Sign Up</button>

      <a href="/auth/login">I already have an account</a>
   </form>

</section>
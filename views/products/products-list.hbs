    <section id="searchAndFilter">

        <form action="/products" method="GET">

            <input id="search" type="text" name="word" placeholder="What are you looking for?"  value="{{data.filter.name.$regex}}">
            <input id="maxPrice" type="text" name="maxPrice" placeholder="Max. price" value="{{data.filter.price.$lte}}">

            <button  type="submit" > Find </button>

            <br>
            <input type="radio" id="html" name="list" value="null" onChange="this.form.submit()" >
            <label>Show All</label>
            {{#each data.lists}}

                <input type="radio" id="html" name="list" value="{{this._id}}" onChange="this.form.submit()" onclick="myFunction()" >
                <label>{{this.name}}</label>

                {{!-- <?php if(!isset($_POST['list']) || (isset($_POST['list']) && $_POST['list'] == '{{this._id}}')) echo ' checked="checked"'?> --}}
                {{!-- <?php if(isset($_POST['list'])) echo "checked='checked'"; ?> --}}

            {{/each}}

            <button onclick="myFunction()">Click me</button>

            <script>
            function myFunction() {
                alert('Button was clicked!');
            }
            </script>

        </form>

        {{!-- {{#each data.filter}}
            <p>{{this}}</p>
        {{/each}} --}}

    </section>



<section id="allProducts">

{{#each data.products}}
<div class="product">

    {{#if image}}
    <img src="{{this.image}}"/>
    {{else}}
    <img src="https://t4.ftcdn.net/jpg/04/70/29/97/360_F_470299797_UD0eoVMMSUbHCcNJCdv2t8B2g1GVqYgs.jpg"/>
    {{/if}}



    <div class="productHeader">
        <p class="productName">{{this.name}}</p>
        <p class="productPrice">{{this.price}} â‚¬</p>
        <button id="linkButton"><a href="{{this.link}}" target="_blank">Product Page</a></button>
    </div>

    {{#if notes}}
    <p class="notes">Notes:<br>{{this.notes}}</p>
    {{/if}}

    <div class="editButtons">
        <button id="editButton"><a href="/products/{{this._id}}/edit">Edit</a></button>
        <form id="/products/{{this._id}}/delete" method="POST">
            <button class="editButton">Delete</button>
        </form>
    </div>

</div>
{{/each}}


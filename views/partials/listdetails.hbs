<div id="overlayModal" class="modal">

    <a id="closingButton" href="/products/">
        <img src="/images/004-close.png" alt="">
    </a>

    <form class="listForm" action="/lists/{{data.list.id}}/edit" method="POST">

        <h1>List Details</h1>

        <label>
            Name:
            <input type="text" name="name" value="{{data.list.name}}" required>
        </label>

        <label>
            Description:
            <input type="text" name="description" value="{{data.list.description}}">
        </label>

        <button type="submit">Save Changes</button>
  </form>

</div>











